<div class="w-full max-w-3xl">
    <div class="mb-8">
        <%= link_to "â† Back to Events", posts_path, class: "text-indigo-600 hover:text-indigo-700 font-medium inline-flex items-center space-x-1 transition" %>
    </div>

    <article class="bg-white rounded-xl shadow-lg overflow-hidden border border-gray-200">
        <div class="p-12">
            <h1 class="text-5xl font-bold text-gray-900 mb-4"><%= @post.title %></h1>

            <div class="flex items-center space-x-2 text-sm text-gray-600 mb-8 pb-8 border-b border-gray-200">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v2H4a2 2 0 00-2 2v2h16V7a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v2H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h12a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                </svg>
                <time datetime="<%= @post.published_at.iso8601 %>"><%= @post.published_at.strftime("%B %d, %Y at %I:%M %p") %></time>
            </div>

            <div class="prose prose-lg max-w-none text-gray-700 mb-12 leading-relaxed">
                <%= simple_format(@post.body) %>
            </div>

            <% if @post.url %>
            <div class="bg-indigo-50 border border-indigo-200 rounded-lg p-6 flex items-center justify-between">
                <div>
                    <p class="text-sm text-indigo-600 font-medium mb-1">Original Source</p>
                    <p class="text-gray-800 font-medium"><%= @post.url %></p>
                </div>
                <a href="<%= @post.url %>" target="_blank" rel="noopener noreferrer" class="inline-flex items-center space-x-2 bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700 transition font-medium">
                    <span>Visit Source</span>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                </a>
            </div>
            <% end %>
        </div>
    </article>

    <div class="mt-12 text-center">
        <p class="text-gray-600 mb-4">Enjoy this post? Subscribe to our RSS feed for more updates.</p>
        <a href="<%= feed_path(format: :rss) %>" class="inline-flex items-center space-x-2 bg-orange-500 text-white px-6 py-2 rounded-lg hover:bg-orange-600 transition font-medium">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M5.5 13a3.5 3.5 0 01-.369-6.98 4 4 0 117.753-1 4.5 4.5 0 1-3.762 5.98z"></path>
            </svg>
            <span>Subscribe to RSS</span>
        </a>
    </div>
</div>